{
  "title": "Mitch's custom ESC rule",
  "rules": [
    {
      "description": "left_control alone = ESC",
      "manipulators": [
        {
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
